{
  "name": "gustavo",
  "version": "0.0.1",
  "description": "A (mostly) headless blogging platform built atop Nuxt & Gist.",
  "author": "Brian Gonzalez <me@briangonzalez.org>",
  "scripts": {
    "dev": "nodemon --exec node server.js -w nuxt.config.js -w api/ -w server.js",
    "start": "(NODE_ENV=production nuxt build && NODE_ENV=production node server.js)",
    "precommit": "npm run lint",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore ."
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "dependencies": {
    "axios": "^0.15.3",
    "babel-cli": "^6.24.0",
    "compression": "^1.6.2",
    "cross-env": "^3.2.4",
    "express": "^4.15.2",
    "express-request-proxy": "^2.0.0",
    "html-element": "^2.2.0",
    "morgan": "^1.8.1",
    "node-sass": "^4.5.0",
    "normalize.css": "^5.0.0",
    "nuxt": "latest",
    "sass-loader": "^6.0.3",
    "showdown": "^1.6.4",
    "vue-highlightjs": "^1.1.0",
    "vue-moment": "^2.0.2",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-stage-2": "^6.22.0",
    "eslint": "^3.17.1",
    "eslint-config-standard": "^7.0.1",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "nodemon": "^1.11.0"
  }
}
